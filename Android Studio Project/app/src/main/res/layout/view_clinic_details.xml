<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Boundary.ViewClinicDetailsActivity">


    <TextView
        android:id="@+id/clinicDetails"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="315dp"
        android:layout_height="150dp"
        android:layout_marginBottom="200dp"
        android:autoText="true"
        android:background="@drawable/bg_round"
        android:fontFamily="@font/roboto_slab"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="normal"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:numStars="5"
        android:scaleX="0.65"
        android:scaleY="0.65"
        android:stepSize="0.5"
        android:theme="@style/RatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clinicDetails" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/activity_Recipe_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/radio_group_list_selector2"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintVertical_bias="0.1337"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_recycler_view2"
                android:layout_width="match_parent"
                android:layout_height="252dp"
                android:layout_margin="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/radio_group_list_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.325"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_constraintBottom_toTopOf="@id/radio_group_list_selector2" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RadioGroup
        android:id="@+id/radio_group_list_selector2"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="@null"
        android:orientation="horizontal"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_Recipe_detail_scrollview">

        <ImageButton
            android:id="@+id/direction"
            android:layout_width="66dp"
            android:layout_height="61dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:tint="@color/chasblue1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clinicDetails"
            app:layout_constraintVertical_bias="0.555"
            app:srcCompat="@drawable/clinic1_directions" />

        <ImageButton
            android:id="@+id/reviews"
            android:layout_width="66dp"
            android:layout_height="61dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:tint="@color/chasblue1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/direction"
            app:layout_constraintTop_toBottomOf="@+id/clinicDetails"
            app:srcCompat="@drawable/clinic2_reviews" />

        <ImageButton
            android:id="@+id/call"
            android:layout_width="66dp"
            android:layout_height="61dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:tint="@color/chasblue1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reviews"
            app:layout_constraintTop_toBottomOf="@+id/clinicDetails"
            app:srcCompat="@drawable/clinic3_call" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>