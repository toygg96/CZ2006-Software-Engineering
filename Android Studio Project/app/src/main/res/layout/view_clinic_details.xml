<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Boundary.ViewClinicDetailsActivity">

    <TextView
        android:id="@+id/clinicDetails"
        android:layout_width="318dp"
        android:layout_height="130dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="200dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.460"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.240" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:theme="@style/RatingBar"
        app:layout_constraintBottom_toTopOf="@id/my_recycler_view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clinicDetails" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view2"
        android:layout_width="353dp"
        android:layout_height="320dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/radio_group_list_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_toTopOf="@id/radio_group_list_selector2" />

    <RadioGroup
        android:id="@+id/radio_group_list_selector2"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:background="@null"
        android:orientation="horizontal"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_recycler_view2">

        <ImageButton
            android:id="@+id/direction"
            android:layout_width="66dp"
            android:layout_height="61dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:tint="@color/chasblue1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clinicDetails"
            app:layout_constraintVertical_bias="0.555"
            app:srcCompat="@drawable/clinic1_directions" />

        <ImageButton
            android:id="@+id/reviews"
            android:layout_width="66dp"
            android:layout_height="61dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:tint="@color/chasblue1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/direction"
            app:layout_constraintTop_toBottomOf="@+id/clinicDetails"
            app:srcCompat="@drawable/clinic2_reviews" />

        <ImageButton
            android:id="@+id/call"
            android:layout_width="66dp"
            android:layout_height="61dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:tint="@color/chasblue1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reviews"
            app:layout_constraintTop_toBottomOf="@+id/clinicDetails"
            app:srcCompat="@drawable/clinic3_call" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>